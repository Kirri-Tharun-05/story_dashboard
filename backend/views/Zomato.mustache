<!doctype html>
<html ⚡>
  <head>
    <meta charset="utf-8" />
    <title>{{title}}</title>
    <link rel="canonical" href="self.html" />
    <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1" />
    <style amp-boilerplate>
      body { visibility: hidden }
    </style>
    <noscript>
      <style amp-boilerplate>body { visibility: visible }</style>
    </noscript>
    <script async src="https://cdn.ampproject.org/v0.js"></script>
    <script async custom-element="amp-story" src="https://cdn.ampproject.org/v0/amp-story-1.0.js"></script>
    <script async custom-element="amp-animation" src="https://cdn.ampproject.org/v0/amp-animation-0.1.js"></script>
    <style amp-custom>
      amp-story {
        font-family: 'Arial', sans-serif;
        color: #fff;
      }

      amp-story-page {
        position: relative;
        height: 100vh;
      }

      h1, h2 {
        font-weight: bold;
        text-shadow: 0 4px 6px rgba(0, 0, 0, 0.5), 0 1px 3px rgba(0, 0, 0, 0.3);
        font-family: 'Poppins', sans-serif;
      }

      h1 {
        font-size: 3rem;
        color: #FFDD00;
        margin: 0 0 20px 0;
      }

      h2 {
        font-size: 1.8rem;
        color: #fff;
        margin: 10px 0;
      }

      p {
        font-size: 1rem;
        margin: 5px 0;
        line-height: 1.5;
      }

      /* Text fade-in */
      .fade-in {
        animation: fadeInText 2s ease-in forwards;
        opacity: 0;
      }

      @keyframes fadeInText {
        to {
          opacity: 1;
        }
      }

      /* Zoom-out background effect */
      .zoom-out-effect {
        animation: zoomOut 10s infinite alternate;
      }

      @keyframes zoomOut {
        0% {
          transform: scale(1);
        }
        100% {
          transform: scale(1.2);
        }
      }

      /* Text container */
      .text-container {
        background-color: rgba(0, 0, 0, 0.6);
        padding: 15px;
        border-radius: 10px;
        margin: 10px;
        max-width: 80%;
        margin-left: auto;
        margin-right: auto;
      }

      /* Page-specific content */
      amp-story-grid-layer {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
      }

      /* Bottom text layout */
      .text-layer {
        position: absolute;
        bottom: 20px;
        left: 0;
        right: 0;
        padding: 10px 20px;
        background-color: rgba(0, 0, 0, 0.6);
        border-radius: 10px;
      }

      /* CTA Button */
      .cta-button {
        display: inline-block;
        background-color: #FFDD00;
        color: #000;
        padding: 12px 24px;
        text-transform: uppercase;
        font-weight: bold;
        text-decoration: none;
        border-radius: 5px;
        margin-top: 20px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        transition: background-color 0.3s ease, transform 0.3s ease;
        font-size: 1.2rem;
      }

      .cta-button:hover {
        background-color: #e6b800;
        transform: translateY(-3px);
      }

      /* Media Queries for better responsiveness */
      @media (max-width: 768px) {
        h1 {
          font-size: 2rem;
        }

        h2 {
          font-size: 1.2rem;
        }

        .cta-button {
          font-size: 1rem;
          padding: 10px 20px;
        }

        .text-container {
          max-width: 90%;
        }
      }
    </style>
  </head>

  <body>
    <amp-story standalone
      title="{{title}}"
      publisher="Your Brand"
      publisher-logo-src="https://yourbrand.com/logo.png"
      poster-portrait-src="{{slides.image_urls.0}}">

      <!-- Page 1: Cover -->
      <amp-story-page id="cover">
        <amp-story-grid-layer template="fill">
          <amp-img src="{{slides.image_urls.0}}" width="720" height="1280" layout="responsive"></amp-img>
        </amp-story-grid-layer>
        <amp-story-grid-layer template="vertical">
          <h1>{{slides.name}}</h1>
          <p>Explore the taste of Jaipur</p>
        </amp-story-grid-layer>
      </amp-story-page>

      <!-- Page 2: Cuisine & Cost -->
      <amp-story-page id="cuisine-cost">
        <amp-story-grid-layer template="fill">
          <amp-img src="{{slides.image_urls.1}}" width="720" height="1280" layout="responsive"></amp-img>
        </amp-story-grid-layer>
        <amp-story-grid-layer template="vertical">
          <h2>Cuisine</h2>
          <p>{{slides.cuisine}}</p>
          <h2>Avg. Cost for Two</h2>
          <p>₹{{slides.average_cost}}</p>
        </amp-story-grid-layer>
      </amp-story-page>

      <!-- Page 3: Location & Timing -->
      <amp-story-page id="location-timing">
        <amp-story-grid-layer template="fill">
          <amp-img src="{{slides.image_urls.2}}" width="720" height="1280" layout="responsive"></amp-img>
        </amp-story-grid-layer>
        <amp-story-grid-layer template="vertical">
          <h2>Location</h2>
          <p>{{slides.location}}</p>
          <h2>Timing</h2>
          <p>{{slides.timing}}</p>
        </amp-story-grid-layer>
      </amp-story-page>

      <!-- Page 4: Ambiance -->
      <amp-story-page id="ambiance">
        <amp-story-grid-layer template="fill">
          <amp-img src="{{slides.image_urls.3}}" width="720" height="1280" layout="responsive"></amp-img>
        </amp-story-grid-layer>
        <amp-story-grid-layer template="vertical">
          <h2>Ambiance</h2>
          <p>{{slides.ambiance_desc}}</p>
        </amp-story-grid-layer>
      </amp-story-page>

      <!-- Page 5: Zomato Link CTA -->
      <amp-story-page id="zomato-link">
        <amp-story-grid-layer template="fill">
          <amp-img src="{{slides.image_urls.4}}" width="720" height="1280" layout="responsive"></amp-img>
        </amp-story-grid-layer>
        <amp-story-grid-layer template="vertical">
          <h2>Ready to Visit?</h2>
          <a href="{{slides.zomato_link}}" class="cta-button" target="_blank">View on Zomato</a>
        </amp-story-grid-layer>
      </amp-story-page>

    </amp-story>
  </body>
</html>
