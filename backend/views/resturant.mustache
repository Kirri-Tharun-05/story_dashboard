<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>{{story_title}}</title>
  <style>
    body { font-family: sans-serif; margin: 0; padding: 0; background: #f9f9f9; }
    .slide { padding: 2rem; text-align: center; min-height: 100vh; display: flex; flex-direction: column; justify-content: center; }
    img { max-width: 100%; border-radius: 10px; margin-top: 1rem; }
    h1, h2 { color: #333; }
    p { color: #555; }
    .cta-button {
      display: inline-block;
      margin-top: 1rem;
      padding: 0.8rem 1.5rem;
      background-color: #ff6347;
      color: #fff;
      text-decoration: none;
      border-radius: 5px;
    }
  </style>
</head>
<body>

  {{#slides}}

    {{#type}}
      {{#intro}}
        <section class="slide" style="background-color: #ffe4e1;">
          <h1>{{heading}}</h1>
          <h2>{{subheading}}</h2>
          {{#image_url}}<img src="{{image_url}}" alt="Intro Slide" />{{/image_url}}
        </section>
      {{/intro}}

      {{#restaurant}}
        <section class="slide" style="background-color: #fff;">
          <h1>{{restaurant_name}}</h1>
          <p><strong>Location:</strong> {{location}}</p>
          <p><strong>Cuisine:</strong> {{cuisine}}</p>
          <p><strong>Rating:</strong> {{rating}} ‚≠ê</p>
          <p>{{description}}</p>
          {{#image_url}}<img src="{{image_url}}" alt="{{restaurant_name}}" />{{/image_url}}
        </section>
      {{/restaurant}}

      {{#outro}}
        <section class="slide" style="background-color: #e0f7fa;">
          <h1>{{heading}}</h1>
          <h2>{{subheading}}</h2>
          {{#image_url}}<img src="{{image_url}}" alt="Outro Slide" />{{/image_url}}
          {{#cta_link}}<a class="cta-button" href="{{cta_link}}" target="_blank">{{cta_text}}</a>{{/cta_link}}
        </section>
      {{/outro}}
    {{/type}}

  {{/slides}}

</body>
</html>
