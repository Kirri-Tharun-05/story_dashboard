<!doctype html>
<html ⚡>
  <head>
    <meta charset="utf-8" />
    <title>{{title}}</title>
    <link rel="canonical" href="self.html" />
    <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1" />
    <style amp-boilerplate>
      body { visibility: hidden }
    </style>
    <noscript>
      <style amp-boilerplate>body { visibility: visible }</style>
    </noscript>
    <script async src="https://cdn.ampproject.org/v0.js"></script>
    <script async custom-element="amp-story" src="https://cdn.ampproject.org/v0/amp-story-1.0.js"></script>
    <style amp-custom>
      amp-story {
        font-family: 'Arial', sans-serif;
        color: #fff;
      }

      h1, h2 {
        font-weight: bold;
        text-shadow: 0 4px 6px rgba(0, 0, 0, 0.6), 0 1px 3px rgba(0, 0, 0, 0.3);
        font-family: 'Poppins', sans-serif;
        margin: 0.3em 0;
      }

      h1 {
        font-size: 3rem;
        color: #FFDD00;
      }

      h2 {
        font-size: 1.8rem;
      }

      p {
        font-size: 1rem;
        margin: 0.3em 0;
        line-height: 1.5;
      }

      @keyframes zoomInOut {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
      }

      .zoom-in-out {
        animation: zoomInOut 20s ease-in-out infinite;
      }

      @keyframes fadeSlideUp {
        0% {
          opacity: 0;
          transform: translateY(30px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .fade-slide-up {
        animation: fadeSlideUp 1.2s ease-out forwards;
      }

      .text-overlay {
        background: linear-gradient(to top, rgba(0, 0, 0, 0.7), rgba(0,0,0,0.2));
        backdrop-filter: blur(5px);
        padding: 20px;
        border-radius: 12px;
        margin: 0 20px;
        text-align: center;
        color: #fff;
      }

      .cta-button {
        display: inline-block;
        background-color: #FFDD00;
        color: #000;
        padding: 12px 24px;
        text-transform: uppercase;
        font-weight: bold;
        text-decoration: none;
        border-radius: 8px;
        margin-top: 20px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        transition: background-color 0.3s ease, transform 0.3s ease;
        font-size: 1.2rem;
      }

      .cta-button:hover {
        background-color: #e6b800;
        transform: translateY(-3px);
      }

      @media (max-width: 768px) {
        h1 {
          font-size: 2rem;
        }

        h2 {
          font-size: 1.3rem;
        }

        .cta-button {
          font-size: 1rem;
          padding: 10px 20px;
        }

        .text-overlay {
          padding: 15px;
        }
      }
    </style>
  </head>

  <body>
    <amp-story standalone
      title="{{title}}"
      publisher="Your Brand"
      publisher-logo-src="https://yourbrand.com/logo.png"
      poster-portrait-src="{{slides.image_urls.0}}">

      <!-- Page 1: Cover -->
      <amp-story-page id="cover">
        <amp-story-grid-layer template="fill">
          <amp-img src="{{slides.image_urls.0}}" width="720" height="1280" layout="responsive" class="zoom-in-out"></amp-img>
        </amp-story-grid-layer>
        <amp-story-grid-layer template="vertical">
          <div class="text-overlay fade-slide-up">
            <h1>{{slides.name}}</h1>
            <p>Explore the taste of Jaipur</p>
          </div>
        </amp-story-grid-layer>
      </amp-story-page>

      <!-- Page 2: Cuisine & Cost -->
      <amp-story-page id="cuisine-cost">
        <amp-story-grid-layer template="fill">
          <amp-img src="{{slides.image_urls.1}}" width="720" height="1280" layout="responsive" class="zoom-in-out"></amp-img>
        </amp-story-grid-layer>
        <amp-story-grid-layer template="vertical">
          <div class="text-overlay fade-slide-up">
            <h2>Cuisine</h2>
            <p>{{slides.cuisine}}</p>
            <h2>Avg. Cost for Two</h2>
            <p>₹{{slides.average_cost}}</p>
          </div>
        </amp-story-grid-layer>
      </amp-story-page>

      <!-- Page 3: Location & Timing -->
      <amp-story-page id="location-timing">
        <amp-story-grid-layer template="fill">
          <amp-img src="{{slides.image_urls.2}}" width="720" height="1280" layout="responsive" class="zoom-in-out"></amp-img>
        </amp-story-grid-layer>
        <amp-story-grid-layer template="vertical">
          <div class="text-overlay fade-slide-up">
            <h2>Location</h2>
            <p>{{slides.location}}</p>
            <h2>Timing</h2>
            <p>{{slides.timing}}</p>
          </div>
        </amp-story-grid-layer>
      </amp-story-page>

      <!-- Page 4: Ambiance -->
      <amp-story-page id="ambiance">
        <amp-story-grid-layer template="fill">
          <amp-img src="{{slides.image_urls.3}}" width="720" height="1280" layout="responsive" class="zoom-in-out"></amp-img>
        </amp-story-grid-layer>
        <amp-story-grid-layer template="vertical">
          <div class="text-overlay fade-slide-up">
            <h2>Ambiance</h2>
            <p>{{slides.ambiance_desc}}</p>
          </div>
        </amp-story-grid-layer>
      </amp-story-page>

      <!-- Page 5: Zomato Link CTA -->
      <amp-story-page id="zomato-link">
  <!-- Background Image Layer -->
  <amp-story-grid-layer template="fill">
    <amp-img src="{{slides.image_urls.4}}" width="720" height="1280" layout="responsive" class="zoom-in-out"></amp-img>
  </amp-story-grid-layer>

  <!-- Heading Text Layer -->
  <amp-story-grid-layer template="vertical">
    <div class="text-overlay fade-slide-up">
      <h2>Ready to Visit?</h2>
    </div>
  </amp-story-grid-layer>

  <!-- ✅ Call-to-action link layer -->
  <amp-story-cta-layer>
    <a href="{{{slides.zomato_link}}}" class="cta-button" target="_blank">View on Zomato</a>
  </amp-story-cta-layer>
</amp-story-page>


    </amp-story>
  </body>
</html>
